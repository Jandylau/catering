/* pages/site/orderDetail/orderDetail.wxss */
page{
  background-color:#f5f5f5      
}
.fr{
    float: right      
}
.row{
   box-sizing: border-box;
   font-size: 28rpx;
   margin-bottom:90rpx;
   padding:15rpx;
   position: relative;
}
.payname {
    margin-left: 40rpx;
}
.order {
    padding: 0 30rpx;
}
.order-detail {
    margin-top: 20rpx;
    border-radius:4rpx;
    background-color: #fff;
    padding: 15rpx;
}
.order_table{
  border-right:0;
  width: 100%;
  background-color: #fff
}
.orderth{
  font-size:28rpx;
   color:#333;     
}
.ordertr:not(:first-child){
   width: 100%;
   display: flex; 
   border-top:1rpx solid #dedede;
   justify-content: space-between      
}
.ordertd {
 width: 100%;
   padding:20rpx 0;
   text-align:left;
}
.ortitle{
  width:25%;   
}
.ordertd view{
  margin-bottom:20rpx;      
}
.borders{
  border-bottom:1rpx solid #dedede;       
}
/*商品列表*/
.order_one{
    width: 100%;       
}
.order_one .navigator{
    height:100rpx;
    display: flex;     
    padding:10rpx 0;
    overflow: hidden;   
}
.product-info-box text{    
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 
.shoptitle{
  font-size:26rpx;       
}
 .pro-img {
  position: relative;
  height:80rpx;
  width: 80rpx;
  overflow: hidden;
  padding: 10rpx;
  text-align: center;
}
 .pro-img image{
  height:80rpx;
  width: 80rpx;
}
.product-info-box {
    padding:0 10rpx;
    width:50%;
    line-height:100rpx;
    color:#666

}
.futile {
    margin: 6rpx 0;
    font-size: 24rpx;
    color: #999;
}
.nav_prive{
 font-size:24rpx       
}
.red-price{
 color: #f23030;
}
.orderNum{
  width:18%;
  color:#666;
  line-height:100rpx
}
.little-icon {
  text-align: right
}
.goback {
    background: #ff9900;
    position:fixed;
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    width:100%;
    padding:25rpx 0;
    bottom:0;
    left:0
}