/* pages/consulting/consulting.wxss */
page{
  background-color: #f5f5f5
}
.fr{
    float: right      
}
.clear{
  clear:both      
}
.row{
   box-sizing: border-box;
   font-size: 28rpx;
   margin-bottom:20rpx;
   padding:0 20rpx   
}
.consulTitle{
  padding:40rpx 0;
  text-align: center;
  font-size:38rpx;
  background-color:#fff
}

.icon-popups{
 position:relative;
 font-size:24rpx;
 color: #999
}
.payname {
    margin-left: 40rpx;
}
.order {
    padding: 0 30rpx;
}
.order-detail {

}
.order_table{
  padding:0 30rpx 30rpx 30rpx;      
  border-right:0;
  background-color: #fff
}
.orderth{
  font-size:28rpx;
   color:#333;     
}
.ordertr{
 padding:10rpx 0;
  width: 100%;
   display: flex; 
  justify-content: space-between      
}
.ordertd {
  height:100%;
   width: 100%;
   text-align:left;
}
.textCont{
border:1rpx solid #ccc;
padding:10rpx 15rpx;
border-radius:10rpx
}
.ortitle{
  width:25%;   
}
.oricon{
    width:10%    
}
.orderTip{
  width:30%;
  margin-left:20rpx       
}
.ordertd view{
  margin-bottom:20rpx;      
}
.borders{
  border-bottom:1rpx solid #dedede;       
}
.fail_img{
  height:140rpx;
  width: 140rpx;      
}
.tip{
  margin-top:30rpx
}
/*商品列表*/
.order_one{
    width: 100%;
   display: flex;
   justify-content: space-between          
}
.order_one navigator{
    height:160rpx;
    width:98%;
    position: relative;
     margin-top:20rpx;   
    border-bottom: 1px solid #DEDEDE;     
}
.product-info-box text{  
  display: block;   
  /*设置文字溢出部分为...*/  
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow: ellipsis;  
} 
.shoptitle{
  font-size:26rpx;       
}
 .pro-img {
    position: absolute;
    height:120rpx;
    width: 120rpx;
    overflow: hidden;
    padding: 10rpx;
    text-align: center;
    border: 1px solid #EDEDED;
}
 .pro-img image{
   height:120rpx;
    width: 120rpx;     
}
.product-info-box {
    -webkit-box-flex: 1;
    margin-left:160rpx;
    height: 100%;
    margin-top: -2px;
    padding-right: 10rpx;
}
.futile {
    margin: 6rpx 0;
    font-size: 24rpx;
    color: #999;
    line-height: 1;
}
.nav_prive{
 position:absolute;
 bottom:20rpx;
 width:70%;
 left:160rpx;
 font-size:24rpx       
}
.red-price{
 color: #f23030;
}
.little-icon {
    color: #9B9B9B;
}
.addressbun{
  width: 100%;
 text-align: center;   
}
.goback {
    background: #F02804;
    position:relative;
    color: #fff;
    display:inline-block;
    font-size: 26rpx;
    text-align: center;
    margin-top:50rpx;
    margin-bottom:30rpx;
    margin-right:20rpx;
    width:200rpx;
    height:60rpx;
    padding-top: 0.6rem;
    border-radius: 12px;
}
.refut {
    color: #999;
}
.addinput {
    vertical-align: top;
}
.refund-desc {
    width:96%;
    height: 200rpx;
    margin: 0 auto;
    border-radius:12rpx;
    margin-top:20rpx;
    border: 1rpx #D9D9D9 solid;
    text-align: left;
    padding:10rpx
}
.fail-item {
    border-top: 1rpx #dedede solid;
     width: 100%;
}
.refundContent {
    height: 150rpx;
    margin-top:20rpx;
    margin-left:30rpx
}
.refundContent .img_result {
    margin: 20rpx 0;
}
.refundContent .img_result image{
   width:100rpx;
   height:100rpx;
   margin-right:10rpx;
   margin-top:10rpx    
}
.saveBtn {
  display: block;
    border: 1rpx solid #dedede;
   height:50rpx;
   width: 150rpx;
   padding-top:15rpx; 
   text-align: center;
    font-size:26rpx;
    border-radius: 12rpx;
}
.mod_btn {
    color: #fff;
    display:inline-block;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    border: 0;
    margin: 0 auto;
    width:40%;
    height:80rpx;
    margin-top: 50rpx;
    line-height:80rpx;
    text-align: center;
    font-size:28rpx;
    border-radius:16rpx;
    position: relative;
    margin-left:30rpx
}
.btn_green{
 background:#3ed650;
}
.btn_red{
 background:#f94747;
}
.marginLeft{
  margin-left:80rpx
}
.datePick{
 height:40rpx;
 padding:10rpx 15rpx;
}
.picker{
  font-size:28rpx;
  height:55rpx
}