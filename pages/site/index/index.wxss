/* pages/mall/index/index.wxss */
 @import '../template/template.wxss';
/*banner图*/

page {
        background-color: #f5f5f5;
}

.section {
margin-bottom:100rpx
}

.view_banner {
   height:320rpx;  
}

.view_banner image {
  margin: 0;
  border: 0;
   height:100%;  
  width: 100%;
}

/*快捷入口*/

.view_channel {
  position: relative;
  margin: 40rpx 80rpx;
}
.channel_list{
  width:100%;
  background:rgba(0,0,0,0.6);
  border-radius:16rpx;
  margin-top:10rpx;
  position:relative
}
.channel_bg{
  position: absolute;
  top:0px;
  left:0px;
  height:136rpx;
  width:100%;
  z-index:-10;
  border-radius:16rpx;
}
.channel_list .channel_item {
  display:flex;
  flex-direction: row;
  align-items: center;
  height:136rpx;
  overflow: hidden;
   margin: 0 auto;
   z-index: 1000
}
.channel_list .channel_item .view-img {
  display:inline-block;
  text-align: center;
  width:20%;
  overflow: hidden;
  padding-top:10rpx;
  margin-left:100rpx
}
.view-img image {
  height: 88rpx;
  width: 88rpx;
  -moz-border-radius: 100%;
  -webkit-border-radius: 100%;
  border-radius: 100%;
}
.channel_list .channel_item .shopTitle{
  padding: 40rpx 0;
  padding-left:30rpx
}
 .cellspan,.futitle{
  vertical-align: 0;
  text-overflow: ellipsis;
  white-space: nowrap;
}
 .cellspan{
  font-size: 28rpx;
  color: #fff;
 }
  .futitle{
  font-size: 22rpx;
  color: #ccc;
   text-transform: capitalize;
 }
/*地址*/
.view_address{
   display: flex;
  flex-direction: row;
  align-items: center;
 background-color:#fff;
 padding:20rpx 40rpx;
box-shadow: 6rpx 5rpx 6rpx rgba(0, 0, 0, 0.05);
}
.logo{
width:41rpx;
padding-right:30rpx 
}
.logo image{
width:41rpx;
height:48rpx; 
}
.address-row{
width:80%;
font-size:24rpx
}
.shopName{
 font-size:28rpx;
 color:#333
}
.addressName{
 font-size:22rpx;
 color:#999;
 margin-top:5rpx
}
.map-row{
width: 42rpx;
padding-left:30rpx;
text-align: right;
padding-top:10rpx;
border-left:1rpx solid #ccc;
}
.map-row image{
width: 42rpx;
height:42rpx;
}
.gophone{
  font-size:24rpx;
  padding:10rpx 20rpx;
  border:#ccc solid 1rpx;
  border-radius:32rpx
}
/*店铺信息*/
.store{
background-color: #fff;
margin-bottom:20rpx;
}
.store .storeItem{
  height:88rpx;
  line-height: 88rpx;
 display: flex;
flex-direction: row;
align-items: center;
padding:0 40rpx
}
.storeIcon{
  width: 20%；
}
.storeIcon .iconImg{
  width: 46rpx;
  margin-top:26rpx;
  height:46rpx
}
.storeTitle{
  font-size: 28rpx;
  color: #333;
  width:60%;
  padding-left:20rpx
}
.storeDate{
   width:30%;
   color:#999;
   font-size: 24rpx;
   text-align: right
}
.sborder{
  border-bottom:1rpx #dedede solid
}
/*栏目*/
.view-table-view {
  position: relative;
  border-bottom: 0;
  background-color: #f5f5f5;
}
.view-table-view .nav-list {
  background-color: #fff;
}
.border{
  height: 15rpx;
  width:100%;
  background-color: #f5f5f5
}
.view-list-title,.view-list-title2{
  width: 85%;
  margin: 0 auto;
  padding: 30rpx 30rpx 10rpx 0;
  font-size: 30rpx;
}
.view-list-title{
text-align: left; 
border-bottom: 1rpx solid #dedede;    
}
.view-list-title2{
    text-align: center; 
}
.clumname {
        font-size: 24rpx;
        color: #999;
        margin-left: 10rpx;
        text-transform: capitalize;
}

.columnIcon {
        width: 40rpx;
        height: 40rpx;
        vertical-align: -5rpx;
        margin-right: 10rpx;
}

.view-table-view .nav-list .view-mall {
        margin:0 20rpx 0 20rpx;
        position: relative;
        padding:10rpx 0;
}
.notices {
        overflow: hidden;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        text-overflow: ellipsis;
}
.app-info{
  text-align:center;
  margin:20rpx 0;
  padding-top: 50rpx;
  height:260rpx
}
.app-info .give-phone,.app-info .goxun{
    width:440rpx;
    padding:20rpx 0;
    display:inline-block;
    text-align: center;
    border-radius:64rpx;
    margin-top:20rpx;
    font-size:26rpx
}
.app-info .give-phone{
   border:1rpx solid #ccc;
    color:#333;
    background-color:#fff;
}
.app-info .goxun{
    border:1rpx solid red;
    color:#fff;
    background-color:red;
}